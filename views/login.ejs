<%- include ("before_login_header.ejs") %>
    <div class="container-fluid mx-auto">
        <div>
            <h3>Login</h3>
            <%- include("./partials/errorMessages") %>
                <form action="/users/login" method="POST">
                    <div class="form-floating mb-3 col-sm-4">
                        <input type="email" class="form-control" id="login-email" name="email" placeholder="Email" />
                        <label class="form-label" for="login-email">Email</label>
                    </div>
                    <div class="form-floating mb-3 col-sm-4">
                        <input type="password" class="form-control" id="login-password" name="password" placeholder="Password" />
                        <label class="form-label" for="login-password">Password</label>
                    </div>
                    <button type="submit" class="btn btn-outline-primary btn-block mb-3">
        Login
      </button>
                </form>
                <p>
                    No account?
                    <a class="link-primary" href="/users/signup"><u>Sign Up</u></a>
                </p>
        </div>
    </div>