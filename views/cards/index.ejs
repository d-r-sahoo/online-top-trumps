<%- include ("../partials/after_login_header.ejs") %>

    <div class="container-fluid my-auto">
        <h2 class="page-header">Search a card</h2>

        <form class="d-flex justify-content-between align-items-center" action="/cards" method="GET">
            <input type="search" class="form-control me-2" name="cardName" placeholder="Card name" aria-label="Search" value="<%= searchOptions.cardName %>" />
            <button class="btn btn-outline-success mb-0" type="submit">Search</button>
        </form>

        <br />
    </div>

    <%- include("../partials/cardGrid", { cards: cards, large :true }) %>