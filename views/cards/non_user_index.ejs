<%- include("../before_login_header") %>
    <!-- Page heading -->
    <h2 class="page-header">Search a card</h2>
    <!-- form for search bar and button -->
    <form class="d-flex" action="/cards" method="GET">
        <input type="search" class="form-control me-2" name="cardName" placeholder="Card name" aria-label="Search" value="<%= searchOptions.cardName %>" />
        <button class="btn btn-outline-success" type="submit">Search</button>
    </form>

    <!-- inlucding card grid from partials -->
    <%- include("../partials/cardGrid", { cards: cards }) %>