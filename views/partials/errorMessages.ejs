<!-- displays respective error if there are any mistakes in the form -->
<!-- embedded JavaScript to get error messages from the server and display them on the user screen -->
<% if (typeof errors != "undefined") { %>
    <% errors.forEach(function (error) {
%>
        <div class="alert alert-danger" role="alert">
            <!-- error message -->
            <p class="error-message">
                <%= error.msg %>
            </p>
        </div>
        <% }) %>
            <% } %>
                <% if (success_msg != "") { %>

                    <div class="alert alert-success" role="alert">
                        <!-- success message -->
                        <p class="success-message">
                            <%= success_msg %>
                        </p>
                    </div>
                    <% } %>
                        <% if (error_msg != "") { %>

                            <div class="alert alert-danger" role="alert">
                                <!-- error message -->
                                <p class="error-message">
                                    <%= error_msg %>
                                </p>
                            </div>
                            <% } %>
                                <% if (error != "") { %>
                                    <div class="alert alert-danger" role="alert">
                                        <!-- error message -->
                                        <p class="error-message">
                                            <%= error %>
                                        </p>
                                    </div>
                                    <% } %>